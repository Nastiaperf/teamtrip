      <!-- BEGENING OF HOTEL TAB SECTION -->
      <div id="card-section-container-show" class="d-flex bg-secondary justify-content-center pr-5 pl-5"><!-- card-section-container-show // ID not defined -->
        <!-- BEGENING OF HOTEL ITEM CARD -->
        <!-- BEGENING VOTING BOUTON -->
        <% @trip_days.first.suggestions.where(category: "Hotel").all.each do |hotel| %>
          <div id="item-card-show" class="border border-dark m-3 p-3 rounded bg-light" style="width: 25vw"> <!-- Item-card-show // ID not defined -->
            <% if Vote.find_by(suggestion_id: hotel.id, user_id:current_user.id).nil? %>
              <%= link_to votes_path(suggestion_id: hotel.id, trip_id: params[:trip_id], day_id:params[:id]), method: :post do %>
                <div class="position-relative border border-dark m-1" style="height: 20vh">
                  <u>Photo</u>.<%= hotel.photo %>
                  <div class="border border-dark rounded position-absolute" style="top: 2%; right: 2%">
                    Vote <i class="far fa-thumbs-up"></i><%= hotel.votes.count %>
                  </div>
                </div>
              <% end %>
              <!-- ENDING VOTING BOUTON-->
            <% else %>
            <!-- BEGINING UNVOTING BOUTON-->
              <% vote_id = Vote.find_by(suggestion_id: hotel.id, user_id:current_user.id).id %>
              <%= link_to vote_path(id: vote_id, trip_id: params[:trip_id], day_id:params[:id]), method: :delete do %>
                <div class="position-relative border border-dark m-1" style="height: 20vh">
                  <u>Photo</u>.<%= hotel.photo %>
                  <div class="border border-dark rounded position-absolute" style="top: 2%; right: 2%">
                    Vote <i class="far fa-thumbs-up bg-warning"></i><%= hotel.votes.count %>
                  </div>
                </div>
              <% end %>
              <!-- ENDING UNVOTING BOUTON-->
            <% end %>
            <div class="d-flex justify-content-between">
              <div class="text-container align-self-center border border-dark m-1 ">
                <u>Name</u>.<%= hotel.name %>
              </div>
              <div class="text-container align-self-center border border-dark m-1 ">
                <u>Price</u>.<%= hotel.price %>
              </div>
            </div>
            <div class="d-flex">
              <div class="text-container align-self-center border border-dark m-1 ">
                <u>rating</u>.<%= hotel.rating %>
              </div>
              <div class="text-container align-self-center border border-dark m-1 ">
                <u>vote</u>.<i class="far fa-thumbs-up"></i><%= hotel.votes.count %>
              </div>
            </div>
            <div class="text-container align-self-center border border-dark m-1 ">
              <u>Description</u>.<%= hotel.description %>
            </div>
            <div class="text-container align-self-center border border-dark m-1 ">
              <u>Seel all link (google url)</u>.<%= hotel.google_link %>
            </div>
            <div class="divider border border-dark mt-3 mb-3 ">
            </div>
            <div class="d-flex flex-column justify-content-center bg-warning" style="height: 20vh">
              <div class="text-container border border-dark m-1 ">
                <u>User</u>. <%= "#{hotel.user.first_name.capitalize + " " + hotel.user.last_name.capitalize}" %>
              </div>
              <div class="text-container border border-dark m-1 ">
                <u>Comment</u>.<%= hotel.comment %>
              </div>
            </div>
          </div>
        <% end %>
        <!-- ENDING OF HOTEL ITEM CARD -->
      </div>
      <!-- ENDING OF HOTEL TAB SECTION -->
