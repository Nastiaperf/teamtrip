<div class="d-flex justify-content-center pt-2 pb-1 card-marker" \
     data-id="<%= data.id%>" data-highlight-target="card" data-marker="<%=[{"lat":data.latitude, "lng": data.longitude, "icon":image_tag("#{data.category}.png")}] %>">
  <div>
  <%= image_tag(data.user.photo, class:"mini-avatar position-absolute border", style:"margin-top: -0.75rem; margin-left: -0.75rem; z-index: 1") %>
  </div>
  <div id="color" class="item-card item-card-wrapper d-flex justify-content-between"> <!-- Item-card // ID not defined -->
    <div class="d-flex">
      <div class="image-container">
        <%= image_tag (data.photo), class:"image-card" %>
      </div>
      <div class="text-container align-items-start">
        <h2><%= data.name %></h2>
        <h3 class="text-adress"> <%= data.location %></h3>
      </div>
    </div>
    <div class="d-flex info-container ">
      <div class="price-container align-self-center">
        <h3><%= data.price.to_i %>â‚¬</h3>
      </div>
    </div>
  </div>
  <div id="color" class="d-flex flex-column vote-container justify-content-center align-items-center">
    <div style="font-size:28px; color:blue">
    <i class="fas fa-caret-up fa-lg unvoted-thumb" id="arrow"></i>
    </div>
    <h2><%= data.votes.count %></h2>
  </div>
</div>
