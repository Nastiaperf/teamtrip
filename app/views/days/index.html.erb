          <a id="category-button" href="#" class="link-primary"> See all </a> <!-- Category-button// ID not defined -->
        </div>
        <ul class="list-group">
          <% @trip_days.first.suggestions.where(category: "Restaurant").first(2).each do |restaurant| %>
            <!-- BEGGENING OF RESTAURANT ITEM CARD -->
            <li id="item-card" class="list-group-item border border-dark"> <!-- Item-card // ID not defined -->
              <div class="item-card-wrapper d-flex justify-content-around border border-dark">
                <div class="image-container align-self-center border border-dark">
                  Photo placeholder
                </div>
                <div class="text-container align-self-center border border-dark">
                  <%= restaurant.name %>
                  <%= restaurant.location %>
                </div>
                <div class="info-container border border-dark">
                  <div class="price-container align-self-center border border-dark">
                    <%= restaurant.price %>€
                  </div>
                  <div class="vote-container align-self-center border border-dark">
                    <i class="far fa-thumbs-up"></i><%= restaurant.votes.count %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
          <!-- ENDING OF RESTAURANT ITEM CARD -->
        </ul>
      </div>
      <!-- ENDING OF RESTAURANT SECTION -->
      <!-- BEGGENING OF HOTEL SECTION -->
