<div class="d-flex">
  <div class="w-50">
    <div id="map"
      style="width: 100%;
      height: 100%;"
      data-markers="<%= @markers.to_json %>">
    </div>
  </div>
  <div class="w-50">
    <div class="text-center border border-5 border-dark mb-5 p-5">Calendrier</div>
    <!-- BEGGENING OF ACTIVITY SECTION -->
      <div class="category-card"> <!-- Category-card // ID not defined -->
        <div id="category-card-top" class="d-flex justify-content-between"> <!-- Category-card-top// ID not defined -->
          <!-- Add type of suggestion PRE-DEFINI on new_suggestion page -->
          <%= link_to "+", new_suggestion_path, class:"add_suggestion rounded-circle" %>

          <div> Activities :</div>
          <a id="category-button" href="#" class="link-primary"> See all </a> <!-- Category-button// ID not defined -->
        </div>
        <ul class="list-group">
          <% @trip_days.first.suggestions.where(category: "Activity").first(3).each do |activity| %>
            <!-- BEGGENING OF ACTIVITY ITEM CARD -->
            <li id="item-card" class="list-group-item border border-dark"> <!-- Item-card // ID not defined -->
              <div id="color-activities" class="item-card-wrapper d-flex justify-content-around">
                <div class="image-container">
                  <%= activity.photo %>
                </div>
                <div class="text-container align-self-center ">

                  <div class="dark-blue" ><%= activity.name %></div>
                  <%= activity.location %>
                </div>
                <div class="info-container ">
                  <div class="price-container align-self-center">
                    <div class="dark-blue"><%= activity.price %>€ </div>
                  </div>
                  <div class="vote-container align-self-center border border-dark">
                    <i class="far fa-thumbs-up"></i><%= activity.votes.count %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
          <!-- ENDING OF ACTIVITY ITEM CARD -->
        </ul>
      </div>
      <!-- ENDING OF ACTIVITY SECTION -->
      <!-- BEGGENING OF ACTIVITY SECTION -->
      <div class="category-card"> <!-- Category-card // ID not defined -->
        <div id="category-card-top" class="d-flex justify-content-between"> <!-- Category-card-top// ID not defined -->
