<div class="d-flex flex-column">
  <div>
    <h4>Trip Members :</h4>
  </div>
  <div class="d-flex trip-member-avatar-wrapper">
    <% trip_modal = TripMember.find_by(@current_user).trip_id %>
    <% TripMember.where(trip_id: trip_modal).each do |data| %>
      <div class="trip-member-avatar-edit"><strong><%= "#{data.user.first_name.capitalize} #{data.user.last_name.first.capitalize}" %></strong>
        <div class="user-info-on-hover-edit"><%= "#{data.user.first_name.capitalize} #{data.user.last_name.capitalize}" %></div>
      </div>
    <% end %>
  </div>
  <h2 class="member-invite">Invite a new trip member:</h2>
  <div class="d-flex flex-row">
    <span class="input-group-text email-invite" id="basic-addon3">email</span>
    <a tabindex="0" class="btn btn-lg btn-success" role="button" data-toggle="popover" data-trigger="click" title="Dismissible popover" data-content="Du contenu" data-container="body">Invite sent!</a>
  </div>
</div>
