
<div class="container suggestion-form">
  <%= simple_form_for(Suggestion.new) do |f| %>
    <%= f.input :name, as: :text %>
    <%= f.input :category, as: :text %>
    <%= f.input :price, as: :text %>
    <%= f.input :comment, as: :text %>
    <%= f.association :day, collection: Day.all %>
    <%= f.button :submit %>
  <% end %>
</div>
